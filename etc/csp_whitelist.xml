<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="img-src">
            <values>
                <value id="postfinancecheckout" type="host">checkout.postfinance.ch</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="postfinancecheckout" type="host">checkout.postfinance.ch</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="postfinancecheckout" type="host">checkout.postfinance.ch</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>